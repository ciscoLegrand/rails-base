<div id="<%= dom_id post %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= post.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Content:</strong>
    <%= raw post.content %>
  </p>
  
  
  <% if action_name != "show" %>
    <p class="my-5">
      <strong class="block font-medium mb-1">Meta title:</strong>
      <%= post.meta_title %>
    </p>
    <p class="my-5">
      <strong class="block font-medium mb-1">Meta description:</strong>
      <%= post.meta_description %>
    </p>

    <p class="my-5">
      <strong class="block font-medium mb-1">Position:</strong>
      <%= post.position %>
    </p>

    <p class="my-5">
      <strong class="block font-medium mb-1">Posted:</strong>
      <%= time_tag post.created_at, "data-local": "time-ago" %>
    </p>

    <%= link_to "Show this post", post, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this post', edit_post_path(post), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
